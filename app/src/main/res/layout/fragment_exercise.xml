<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_escuro"
    tools:context=".fragments.ExerciseFragment">

    <!-- Conteúdo da tela -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/txtMeuTreino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meu treino"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="15sp"/>

        <!-- Container do card -->
        <LinearLayout
            android:id="@+id/containerTop"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@drawable/background_treino"
            android:padding="16dp">

            <!-- Intervalo de datas e setas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Seta para a esquerda -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_arrow_left_24"
                    android:tint="@color/white"/>

                <!-- Intervalo de datas -->
                <TextView
                    android:id="@+id/txtIntervaloDatas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="4 de Novembro - 10 de Novembro"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

                <!-- Seta para a direita -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_arrow_right_24"
                    android:tint="@color/white"/>

            </LinearLayout>

            <!-- Linha divisória -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginTop="8dp"/>

            <!-- Dias da semana -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <!-- Dias da semana (Segunda a Domingo) -->

                <!--Segunda-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seg"
                        android:textColor="@color/cinza_claro"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/circle_background"/>
                </LinearLayout>

                <!--Terça-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ter"
                        android:textColor="@color/cinza_claro"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/circle_background"/>
                </LinearLayout>

                <!--Quarta-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qua"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/circle_background_selected"/>
                </LinearLayout>

                <!--Quinta-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qui"
                        android:textColor="@color/cinza_claro"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/circle_background"/>
                </LinearLayout>

                <!--Sexta-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sex"
                        android:textColor="@color/cinza_claro"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/circle_background"/>
                </LinearLayout>

                <!--Sabado-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sab"
                        android:textColor="@color/cinza_claro"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/circle_background"/>
                </LinearLayout>

                <!--Domingo-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dom"
                        android:textColor="@color/cinza_claro"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/circle_background"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--Texto Data-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Hoje, 06 de Novembro"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginStart="20dp"/>

        <!--Card 1 - Biceps -->
        <RelativeLayout
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:background="@drawable/background_treino2">

            <!-- Biceps -->
            <TextView
                android:id="@+id/txtBiceps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bíceps"
                android:textStyle="bold"
                android:textSize="25sp"
                android:padding="15dp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"/>

            <!-- Biceps - ex.1 -->
            <TextView
                android:id="@+id/txtBicepsEx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Rosca Direta com Barra"
                android:textSize="10sp"
                android:padding="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtBiceps" />

            <!-- Biceps - ex.2 -->
            <TextView
                android:id="@+id/txtBicepsEx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Rosca Alternada com Halteres"
                android:textSize="10sp"
                android:padding="15dp"
                android:layout_marginTop="55dp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtBicepsEx1"/>

            <!-- Biceps - ex.3 -->
            <TextView
                android:id="@+id/txtBicepsEx3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Rosca Scott"
                android:textSize="10sp"
                android:padding="15dp"
                android:layout_marginTop="70dp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtBicepsEx1"/>

            <!--imagem biceps-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/biceps"
                android:layout_marginStart="203dp"
                android:layout_alignParentBottom="true"/>

            <!--imagem grafico-->
            <ImageView
                android:layout_width="107dp"
                android:layout_height="71dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="70dp"
                android:src="@drawable/grafico" />
        </RelativeLayout>

        <!--Card 2-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_treino1">

            <!-- Costas -->
            <TextView
                android:id="@+id/txtCostas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costas"
                android:textStyle="bold"
                android:textSize="25sp"
                android:padding="15dp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"/>

            <!-- Costas - ex.1 -->
            <TextView
                android:id="@+id/txtCostasEx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Puxada Frontal (Lat Pulldown)"
                android:textSize="10sp"
                android:padding="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtCostas" />

            <!-- Biceps - ex.2 -->
            <TextView
                android:id="@+id/txtCostasEx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Remada Curvada com Barra"
                android:textSize="10sp"
                android:padding="15dp"
                android:layout_marginTop="55dp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtCostasEx1"/>

            <!-- Biceps - ex.3 -->
            <TextView
                android:id="@+id/txtCostasEx3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Remada Unilateral com Halter"
                android:textSize="10sp"
                android:padding="15dp"
                android:layout_marginTop="70dp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtCostasEx2"/>

            <!--imagem cardio-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/costas"
                android:layout_marginStart="203dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <!--Card 3-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_treino3">

            <!-- Cardio -->
            <TextView
                android:id="@+id/txtCardio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardio"
                android:textStyle="bold"
                android:textSize="25sp"
                android:padding="15dp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"/>

            <!-- Cardio - ex.1 -->
            <TextView
                android:id="@+id/txtCardioEx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Esteira ou Bicicleta (15-20min)"
                android:textSize="10sp"
                android:padding="15dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtCardio"/>

            <!--imagem cardio-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/coracao"
                android:layout_marginStart="203dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="240dp" />

    </LinearLayout>
</ScrollView>
